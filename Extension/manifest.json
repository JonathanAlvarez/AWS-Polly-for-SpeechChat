{
	"manifest_version": 2,
	"name": "Twitch chat TTS",
	"description": "Reads out twitch chat from the popout window, https://github.com/kofreadie",
    "version": "1.0",
    "permissions": ["tabs"],
    "background":
    {
        "scripts": ["background.js"]
    },
    "browser_action":
    {
        "default_icon": "Icon.png",
		"default_title": "Go to Github page"
	},
    "content_scripts":
    [{
            "matches": ["https://*.twitch.tv/popout/*/chat"],
            "js": ["latest.js"]
    }]
}